<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Heading1Text">
        <item name="android:textSize">@dimen/heading1TextSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Heading2Text">
        <item name="android:textSize">@dimen/heading2TextSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleEditText">
        <item name="android:paddingStart">@dimen/edit_text_hint_padding</item>
        <item name="android:paddingEnd">@dimen/edit_text_hint_padding</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textSize">@dimen/smallestTextSize</item>
        <item name="android:background">@drawable/edittext_border</item>
    </style>

</resources>
